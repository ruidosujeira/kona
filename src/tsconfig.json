{
  "compilerOptions": {
    // TypeScript 5+ settings
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    // Output
    "declaration": true,
    "declarationMap": true,
    "outDir": "../dist/",
    "removeComments": true,

    // Decorators (TS 5+ native)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Strict type checking
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    // Module interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": false,

    // Import helpers
    "importHelpers": true,
    "noEmitHelpers": true,

    // Other
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Types
    "types": ["node"],

    // JSX support
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/__tests__",
    "playground",
    "_playground",
    "src/testUtils",
    "src/**/_benchmark*",
    "src/compiler/playground"
  ]
}